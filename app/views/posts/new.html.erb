<%= form_tag("/posts/#{@user.id}/create") do %>
  <div id="edit-title">
    <input class="title-form" name="title" placeholder="タイトル">
  </div>

  <div id="edit-main">
    <!--- 投稿一覧やホームに戻るためのサイドバー -->
    <div id="menu-all">
      <div class="side-menu">
        <ul>
          <li><%= link_to('ホームへ', '/') %></li>
          <li><%= link_to('投稿一覧', '/posts/show') %></li>
          <li>カテゴリー</li>
          <li>タグ</li>
          <li>お気に入り一覧</li>
        </ul>
      </div>
    </div>

    <!-- ここでタグやカテゴリの設定 -->
    <div id="post-component">
      <div class="side-component">
        <input type="submit" value="投稿" class="update-post">
        <div class="category-frame">
          <ul>
            <% @categorys.each do |category| %>
              <li>
                <input type="radio" name="category" value="<%= category.id %>"><%= category.name %></input>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <!-- ここに記事を書く -->
    <div id="edit-region" class="edit-region">
      <div class="edit">
        <textarea class="edit-textarea" name="content" cols="30" rows="40" placeholder="記事を書く"></textarea>
      </div>
    </div>
  </div>
<% end %>
