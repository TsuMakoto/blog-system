<!DOCTYPE html>
<html>
  <head>
    <title>BlogSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% # ------ header contents ------ # %>
    <header class="head-contents">
      <div class="navbar">
        <ul class="nav">
          <% if user_signed_in? %>
            <li><%= link_to t('.user_home'), user_path(current_user.user_id) %></li>
            <li><%= link_to t('.posts'), posts_path %></li>
            <li><%= link_to t('.logout'), destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to t('.posts'), posts_path %></li>
            <li><%= link_to t('.login'), new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </header>

    <% # ------ success message ------ # %>
    <% if flash[:notice]%>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% # ------ main contents ------ # %>
    <div class="main-content">
      <%# 投稿一覧やホームに戻るための左サイドバー %>
      <% if user_signed_in? %>
        <div id="left-menu-all">
          <div class="side-menu">
            <ul>
              <li><%= link_to t('.user_posts'), user_posts_path(current_user.user_id) %></li>
              <li><%= link_to t('.new_posts'),  new_post_path %></li>
              <li><%= t('.category') %></li>
              <li><%= t('.tag') %></li>
              <li><%= t('.like') %></li>
            </ul>
          </div>
        </div>
      <% end %>
      <%#- 投稿一覧やホームに戻るためのサイドバー %>
      <div id="original-contents">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
